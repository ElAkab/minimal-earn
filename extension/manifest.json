{
	"manifest_version": 3,
	"name": "Mind Stimulator",
	"version": "1.0.0",
	"description": "Système de révision espacée avec flashCards",

	"permissions": ["storage", "alarms", "activeTab", "tabs", "scripting"],

	"host_permissions": ["http://localhost:3000/*"],

	"background": {
		"service_worker": "background.js"
	},

	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["content-script.js"],
			"run_at": "document_idle"
		}
	],

	"action": {
		"default_popup": "popup.html",
		"default_title": "Mind Stimulator"
	}
}
